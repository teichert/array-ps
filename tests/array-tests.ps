(pervasive add works on scalar to scalar) {[3 9 5] 4 +} [[7 13 9]] assert-stack
(pervasive add works on nested array to array) {[3 [9 5] 5] [1 5 3] +} [[4 [14 10] 8]] assert-stack

/enlist {
    1 array astore
} bind def

/eachleft {
    enlist 2 zipwith
} bind def

/eachleft {
    exch enlist exch 2 zipwith
} bind def

/pair {
    2 array astore
} bind def

/cross { % a1 a2 f -- [[a1[1] a2[1]] [a1[1] a2[2]] ... [a1[n] a2[n]]]
    1 array astore cvx
    /eachright cvx
    /aload cvx
    /pop cvx
    4 array astore cvx
    eachleft
} bind def

/pairs { % a1 a2
    {pair} cross
} bind def

